{
    "name": "Timezone Clocks",
    "version": "1.0",
    "description": "Display Multibple Timezone at once",
    "permissions": [
        "*://*/*",
        "tabs"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "web_accessible_resources": [
        "scripts/*"
    ],
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": ["scripts/inject.js"],
            "run_at": "document_start"
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/timezoneclock16.png",
            "32": "images/timezoneclock32.png",
            "48": "images/timezoneclock48.png",
            "128": "images/timezoneclock128.png"
        }
    },
    "icons": {
        "16": "images/timezoneclock16.png",
        "32": "images/timezoneclock32.png",
        "48": "images/timezoneclock48.png",
        "128": "images/timezoneclock128.png"
    },
    "manifest_version": 2
}

